{
  "name": "contracts",
  "version": "1.0.0",
  "private": true,
  "description": "Smart contracts workspace for RWA Lending Platform",
  "license": "MIT",
  "scripts": {
    "cli": "ts-node --project ./tsconfig.scripts.json scripts/cli.ts",
    "compile": "hardhat compile",
    "node": "hardhat node --hostname 127.0.0.1 --port 8545",
    "deploy:localhost": "hardhat run scripts/deploy/deploylocal.ts --network localhost",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "lint:sol": "solhint \"**/*.sol\"",
    "format:sol": "prettier --write \"**/*.sol\"",
    "format:check:sol": "prettier --check \"**/*.sol\"",
    "size": "hardhat size-contracts",
    "gas": "REPORT_GAS=true hardhat test",
    "docs": "solidity-docgen",
    "docs:abi": "ts-node --project ./tsconfig.scripts.json scripts/docs/generateAbiDocs.ts",
    "docs:errors": "ts-node --project ./tsconfig.scripts.json scripts/docs/generateErrorDocs.ts",
    "docs:all": "ts-node --project ./tsconfig.scripts.json scripts/docs/generateAllDocs.ts --docs",
    "clean": "hardhat clean",
    "checks:run-all": "ts-node --project ./tsconfig.scripts.json scripts/checks/runAllChecks.ts",
    "checks:env": "ts-node --project ./tsconfig.scripts.json scripts/checks/check-env.ts",
    "checks:keys": "ts-node --project ./tsconfig.scripts.json scripts/checks/checkKeys.ts",
    "checks:roles": "ts-node --project ./tsconfig.scripts.json scripts/checks/checkRole.ts",
    "checks:registry": "ts-node --project ./tsconfig.scripts.json scripts/checks/check-vaultadmin-registry.ts",
    "ci:check": "ts-node --project ./tsconfig.scripts.json scripts/checks/ci-check.ts",
    "clean:all": "ts-node --project ./tsconfig.scripts.json scripts/cleanup/clean-all.ts",
    "clean:hardhat": "ts-node --project ./tsconfig.scripts.json scripts/cleanup/clean-hardhat-cache.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.9",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.11.30",
    "chai": "^4.2.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.0.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.25.0",
    "hardhat-abi-exporter": "^2.11.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^1.0.3",
    "hardhat-gas-reporter": "^1.0.10",
    "ora": "^7.0.1",
    "p-map": "^7.0.3",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^2.0.0",
    "solhint": "^5.1.0",
    "solidity-coverage": "^0.8.0",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  }
}
